= form_for @test, html: { class: 'form-horizontal' } do |f|
  - if @test.errors.any?
    .alert.alert-danger
      %strong= "#{pluralize(@test.errors.count, "error")} prohibited this test from being saved:"
      %ul
        - @test.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10= f.text_field :name, class: 'form-control'
  .form-group
    = f.label :discipline_id, class: 'col-sm-2 control-label'
    .col-sm-10= f.collection_select :discipline_id, Discipline.order(:name), :id, :name, {}, {class: 'form-control'}
  .form-group
    = f.label :grade, class: 'col-sm-2 control-label'
    .col-sm-10= f.number_field :grade, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: 'btn btn-primary'
