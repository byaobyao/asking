= form_for [@test, @question], html: { class: 'form-horizontal' } do |f|
  - if @question.errors.any?
    .alert.alert-danger
      %strong= "#{pluralize(@question.errors.count, "error")} prohibited this test from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :text
    = f.text_area :text, class: 'form-control wysihtml5'

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: 'btn btn-primary'

:javascript
  $('.wysihtml5').wysihtml5();
